<%= form_tag addresses_path, :class=>'address-search', :method=>:post, :remote=>true, 'data-id-element' => "#trip_#{prefix}_address_id", 'data-label-element' => "##{prefix}_search_address" do %> 
  <%= hidden_field_tag 'prefix', prefix %>
  <%= hidden_field_tag 'lat' %>
  <%= hidden_field_tag 'lon' %>
  <fieldset>
  <ol class="section">
  <li class="selfclear">
    <%= label_tag "#{prefix}_name", "Address Name:" %>
    <%= text_field_tag "#{prefix}_name", address.name %>
  </li>

  <li class="selfclear">
    <%= label_tag "#{prefix}_building_name", "Building Name:" %>
    <%= text_field_tag "#{prefix}_building_name", address.building_name %>
  </li>

  <li class="selfclear">
    <%= label_tag "#{prefix}_address", "Address:" %>
    <%= text_field_tag "#{prefix}_address", address.address %>
  </li>

  <li class="selfclear">
    <%= label_tag "#{prefix}_city", "City:" %>
    <%= text_field_tag "#{prefix}_city", address.city %>
  </li>

  <li class="selfclear">
    <%= label_tag "#{prefix}_state", "State:" %>
    <%= text_field_tag "#{prefix}_state", address.state, :size=>2 %>
  </li>

  <li class="selfclear">
    <%= label_tag "#{prefix}_zip", "ZIP:" %>
    <%= text_field_tag "#{prefix}_zip", address.zip %>
  </li>
  
  <li class="selfclear">
    <%= label_tag "#{prefix}_phone_number", "Phone Number:" %>
    <%= text_field_tag "#{prefix}_phone_number", address.phone_number %>
  </li>

  <li class="selfclear">
    <%= label_tag "#{prefix}_in_district", "In TriMet District:" %>
    <%= select_tag "#{prefix}_in_district", options_for_select([["Yes", "true"], ["No", "false"]]) %>
  </li>
  </ol>
  </fieldset>
<% end %>


